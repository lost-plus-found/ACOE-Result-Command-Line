#!/bin/bash
cp source auresult

echo "Hi, this is a one time installation"
echo ""
echo -n "Register Number: "
read R
echo -n "Password: "
read -s P
echo

PASS=`echo -n $P | openssl dgst -sha512`
LEN=`expr ${#PASS} - 9`
PASS=${P:9:$LEN}

#ACOE site is down, need to be updated#
#curl -s --data "user=$R&password=&p=$PASS" https://acoe.annauniv.edu/student/process_login.php

sed -i "0,/XXXXXX/s/XXXXXX/$R/" auresult
sed -i "0,/YYYYYY/s/YYYYYY/$P/" auresult

echo "Installing..."
